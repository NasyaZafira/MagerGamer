<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemKomunitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_content_post">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Legends Indonesia"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/cardFoto"
            app:layout_constraintStart_toEndOf="@id/cardFoto"/>

        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi_komunitas"
            app:layout_constraintTop_toBottomOf="@id/txtJudul"
            app:layout_constraintStart_toStartOf="@id/txtJudul"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/nunito"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtDeskripsi"
            app:layout_constraintStart_toStartOf="@id/txtDeskripsi"
            android:text="Kategori : Moba"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="4dp"
            android:textSize="12sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>