<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemPost"
        android:layout_width="match_parent"
        android:layout_height="291dp"
        android:background="@drawable/background_content_post"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FAFAFA"
        android:text="Buat Postingan"
        android:fontFamily="@font/nunito_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12.79dp"
        android:layout_marginEnd="12.79dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FAFAFA"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHeader" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUser"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#242526"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/img_user" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganang Rizqijaya"
        android:fontFamily="@font/nunito_bold"
        android:textSize="14sp"
        android:textColor="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintStart_toEndOf="@id/cardUser"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/imgPublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_public"
        app:layout_constraintTop_toBottomOf="@id/txtname"
        app:layout_constraintStart_toStartOf="@id/txtname"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/txtPublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publik"
        android:fontFamily="@font/nunito"
        android:textSize="10sp"
        android:textColor="@color/white_inactive"
        app:layout_constraintTop_toBottomOf="@id/txtUsername"
        app:layout_constraintStart_toEndOf="@id/imgPublic"
        android:layout_marginStart="5dp" />

    <ImageView
        android:id="@+id/imgDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dot"
        app:layout_constraintStart_toEndOf="@id/txtname"
        app:layout_constraintTop_toTopOf="@id/line2"
        android:layout_marginTop="15.5dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ganangrz"
        android:fontFamily="@font/nunito"
        android:textSize="12sp"
        android:textColor="@color/white_inactive"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintStart_toEndOf="@id/imgDot"
        android:layout_marginTop="9.5dp"
        android:layout_marginStart="4dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardBox"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/background_postingan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardUser"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="3"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgAddPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_post"
            android:layout_marginStart="26.67dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textColor="#FAFAFA"
                android:fontFamily="@font/nunito"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white_inactive"
                android:layout_marginStart="39.33dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo"
                android:layout_gravity="center"
                android:layout_marginStart="19.4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto/Video"
                android:textColor="@color/white_inactive"
                android:textSize="10sp"
                android:fontFamily="@font/nunito"
                android:layout_gravity="center"
                android:layout_marginStart="5.4dp" />



</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>